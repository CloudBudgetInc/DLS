    <decisions>
        <name>Email_Send_Date_Check</name>
        <label>Email Send Date Check</label>
        <locationX>573</locationX>
        <locationY>340</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Valid_Date</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference>Email_Send_Date_Before_Seven_Day</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Today_Date</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Email_Send_Date_After_Seven_Day</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>Today_Date</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Send_Loaned_Computer_Reminder</targetReference>
            </connector>
            <label>Is Valid Date</label>
        </rules>
    </decisions>
    <decisions>
