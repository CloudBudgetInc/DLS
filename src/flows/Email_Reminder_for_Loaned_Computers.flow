        <locationX>354</locationX>
        <locationY>336</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Valid_Record_To_Process</name>
            <conditionLogic>1 AND 2 AND (3 OR 4)</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Contact__r.Email</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Contact__r.Last_End_Date__c</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Equipment__r.Asset_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Desktop</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Equipment__r.Asset_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Laptop</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Email_Send_Date_Check</targetReference>
            </connector>
            <label>Valid Record To Process</label>
        </rules>
    </decisions>
    <decisions>
        <name>Holiday_Condition_Check</name>
        <label>Holiday Condition Check</label>
        <locationX>168</locationX>
        <locationY>337</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Is_Business_Day</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>WeekDay_TodayDate</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <numberValue>7.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>WeekDay_TodayDate</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <numberValue>1.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Entry_Conditions_Check</targetReference>
            </connector>
            <label>Is Business Day</label>
        </rules>
    </decisions>
    <formulas>
        <name>Email_Send_Date_After_Seven_Day</name>
        <dataType>Date</dataType>
        <expression>IF({!WeekDay_EmailSendAfterSevDate} == 7, {!EmailSendAfterSevenDate}+2, IF({!WeekDay_EmailSendAfterSevDate} == 1, {!EmailSendAfterSevenDate}+1, {!EmailSendAfterSevenDate}))</expression>
    </formulas>
    <formulas>
        <name>Email_Send_Date_Before_Seven_Day</name>
        <dataType>Date</dataType>
        <expression>IF({!WeekDay_EmailSendBeforeSevDate} == 7, {!EmailSendBeforeSevenDate}-1, IF({!WeekDay_EmailSendBeforeSevDate} == 1, {!EmailSendBeforeSevenDate}-2, {!EmailSendBeforeSevenDate}))</expression>
    </formulas>
    <formulas>
        <name>EmailSendAfterSevenDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.Contact__r.Last_End_Date__c}</expression>
    </formulas>
    <formulas>
        <name>EmailSendBeforeSevenDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.Contact__r.Last_End_Date__c}-7</expression>
    </formulas>
    <formulas>
        <name>Today_Date</name>
        <dataType>Date</dataType>
        <expression>{!$Flow.CurrentDate}</expression>
    </formulas>
    <formulas>
        <name>WeekDay_EmailSendAfterSevDate</name>
        <dataType>Number</dataType>
        <expression>DAY({!EmailSendAfterSevenDate})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>WeekDay_EmailSendBeforeSevDate</name>
        <dataType>Number</dataType>
        <expression>DAY({!EmailSendBeforeSevenDate})</expression>
        <scale>0</scale>
    </formulas>
    <formulas>
        <name>WeekDay_TodayDate</name>
        <dataType>Number</dataType>
        <expression>DAY({!Today_Date})</expression>
        <scale>0</scale>
    </formulas>
